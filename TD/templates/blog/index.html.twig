{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <section class="articles">
        {% for article in articles %}
        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata">Ecrit le {{ article.createdAt | date ('d/m/Y') }} Ã  {{ article.createdAt | date('H:i') }} </div>
            <div class="categories">{{ article.categories }}</div>
            <br>
            <div class="content">
                {{ article.content | raw }}
                <a href="{{ path('blog_suite', {'id':article.id}) }}" class="btn btn-primary">Lire la suite</a>
            </div>
            <hr>
        </article>
        {% endfor %}
    </section>
{% endblock %}
